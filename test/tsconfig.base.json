// tsconfig.json
{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "../../",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["../src/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@types/jest"
    ]
  }
}
